{
  "name": "workspaces",
  "private": "true",
  "module": "index.ts",
  "type": "module",
  "packageManager": "bun@1.2.6",
  "workspaces": [
    "packages/*",
    "packages/frontend/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "rm -rf node_modules packages/*/node_modules bun.lock packages/*/bun.lock",
    "test": "turbo run test",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun run build && changeset publish",
    "release:alpha": "bun run build && cd packages/cli && npm publish --tag alpha --access public",
    "release:check": "changeset status",
    "validate:changeset": "node scripts/validate-changeset.js"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15",
    "@types/http-proxy": "^1.17.16"
  },
  "trustedDependencies": [
    "@swc/core",
    "protobufjs"
  ],
  "dependencies": {
    "http-proxy": "^1.18.1",
    "turbo": "^2.5.4",
    "@changesets/cli": "^2.29.5"
  }
}
